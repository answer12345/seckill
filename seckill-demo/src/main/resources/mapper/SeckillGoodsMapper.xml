<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sangjie.seckill.mapper.SeckillGoodsMapper">
<update id="updateStock">
    update t_seckill_goods set stock_count=stock_count-1 where id=#{id} and stock_count > 0
</update>
</mapper>